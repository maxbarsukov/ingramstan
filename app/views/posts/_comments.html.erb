<% post.comments.each do |comment| %>
  <div class="comment">
    <div class="row">
      <div class="col-sm-3 col-lg-2">
        <%= link_to (image_tag comment.user.image.small_thumb.url, width: "30px", class: "img-circle"), profile_path(comment.user.username) %>
      </div>
      <div class="col-sm-9 col-lg-10">
        <div class="message">
          <strong><%= link_to comment.user.username, profile_path(comment.user.username), class: "text-dark" %></strong>
          <%= simple_format comment.comment %>
          <p class="text-muted small"><%= time_ago_in_words comment.created_at %> ago</p>
        </div>
      </div>
    </div>
  </div>
<% end %>
