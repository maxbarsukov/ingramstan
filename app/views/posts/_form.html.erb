<%= form_for @post, html: { multipart: true } do |f| %>
  <%= f.label :image %>
  <%= f.file_field :image, class: "form-control" %>
  <%= f.hidden_field :image_cache %>

  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.submit "Save Post" , class: "btn btn-success" %>
<% end %>
