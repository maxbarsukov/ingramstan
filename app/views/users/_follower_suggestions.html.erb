<% @follower_suggestions.each do |user| %>
  <div class="recommended-follower">
    <div class="row">
      <div class="col-2">
        <%= link_to (image_tag user.image.small_thumb.url, width: "40px", class: "img-circle"), profile_path(user.username) %>
      </div>
      <div class="col-10">
        <%= link_to user.username, profile_path(user.username), class: "text-dark" %>
        <!-- TODO -->
        <p class="text-muted small"><%= user.created_at > 2.days.ago ? "New to Instagram" : "Followed by X users" %></p>
      </div>
    </div>
  </div>
<% end %>
