<div class="container">
  <div class="row">
    <div class="col-4">
      <%= image_tag @user.image.profile_thumb.url, width: "300px", class: "img-circle" %>
    </div>

    <div class="col-8 text-left">
      <div class="row">
        <div class="col-6">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-light btn-custom float-right mt-4" if can_edit_profile?(@user.id)%>
          <h1><%= @user.username %></h1>
        </div>
      </div>

      <div class="row profile-stats">
        <div class="col-4">
          <%= @user.posts.count %> posts
        </div>
        <div class="col-4">
          <%= @user.total_followers %> followers
        </div>
        <div class="col-4">
          <%= @user.total_following %> following
        </div>
      </div>

      <p><%= @user.full_name %></p>
      <%= simple_format @user.description %>
      <p><%= link_to @user.website if @user.website.present? %></p>
    </div>
  </div>

  <div class="row profile-posts">
    <% @posts.each do |post| %>
      <div class="col-4">
        <div class="insta-post">
        <%= image_tag post.image.url, class: "img img-fluid" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
